<Window x:Class="CS505P2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main Window" Height="350" Width="304">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Name="TitleRow" Height="75" />
            <RowDefinition Name="ControlRow" Height="*" />
        </Grid.RowDefinitions>
        
        <TextBlock Name="mw_textBlock_title"
                   Grid.Row="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontFamily="Cambria"
                   FontSize="20"
                   FontWeight="Bold"
                   Text="wDatabase v2.0" />

        <TextBlock Name="mw_textBlock_author"
                   Grid.Row="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   FontFamily="Cambria"
                   FontSize="12"
                   Text="Wesley Walker" />

        <UserControl Name="mw_userControl_mainControl"
                     Grid.Row="1"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch" />
    </Grid>
    
</Window>
